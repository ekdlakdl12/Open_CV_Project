<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 제목 및 버튼 -->
        <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="이미지 불러오기 및 인식 시작" 
                Margin="5" Padding="10" Click="RecognizeButton_Click"/>

        <!-- 원본 사진 영역 -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="[원본 사진]" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
        <Image x:Name="OriginalImageControl" Grid.Row="1" Grid.Column="0" Margin="5,25,5,5" Stretch="Uniform"/>

        <!-- 작업 후 사진 영역 -->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="[처리된 사진 (그레이스케일/이진화)]" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
        <Image x:Name="ProcessedImageControl" Grid.Row="1" Grid.Column="1" Margin="5,25,5,5" Stretch="Uniform"/>

        <!-- 인식된 텍스트 결과 표시 -->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="[인식된 결과]" 
                   FontWeight="Bold" Margin="5, 10, 5, 0"/>
        <TextBox x:Name="ResultTextBox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                 Height="100" Margin="5" Padding="5" TextWrapping="Wrap"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>

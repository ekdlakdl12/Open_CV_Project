<Window x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Detection" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="8">
            <Button Content="동영상 불러오기" Width="140" Height="32"
                    Command="{Binding OpenVideoCommand}"/>
            <Button Content="정지" Width="80" Height="32" Margin="8,0,0,0"
                    Command="{Binding StopCommand}"/>

            <TextBlock Margin="10,6,0,0" Text="{Binding VideoPath}"/>
            <TextBlock Margin="20,6,0,0" Text="{Binding StatusText}"/>

            <TextBlock Margin="20,6,0,0" Text="{Binding TrackedCountText}"/>

            <TextBlock Margin="20,6,0,0" FontWeight="Bold" Text="{Binding CountText}"/>

            <TextBlock Margin="20,6,0,0" Text="Dets:"/>
            <TextBlock Margin="5,6,0,0" Text="{Binding DetectionsCount}"/>
        </StackPanel>

        <Image Grid.Row="1" Stretch="Uniform"
               Source="{Binding FrameImage}"/>
    </Grid>
</Window>
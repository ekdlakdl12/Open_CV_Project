<Window x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Detection" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="동영상 불러오기" Width="140" Height="32"
                        Margin="0,0,6,0"
                        Command="{Binding OpenVideoCommand}" />
                <Button Content="정지" Width="80" Height="32"
                        Command="{Binding StopCommand}" />
            </StackPanel>

            <!-- ✅ Lane UI -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <TextBlock Text="전체 차선:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="70" Height="28" Margin="0,0,14,0"
                          ItemsSource="{Binding TotalLaneOptions}"
                          SelectedItem="{Binding TotalLanes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="주행 차선:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="70" Height="28" Margin="0,0,14,0"
                          ItemsSource="{Binding CurrentLaneOptions}"
                          SelectedItem="{Binding CurrentLane, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="{Binding CurrentLaneLabel}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock DockPanel.Dock="Left"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding VideoPath}" />
            <TextBlock DockPanel.Dock="Left"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding StatusText}" />
            <TextBlock DockPanel.Dock="Left"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding TrackedCountText}" />
            <TextBlock DockPanel.Dock="Left"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding CountText}" />
            <TextBlock DockPanel.Dock="Left"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding DetectionsCount, StringFormat=Dets: {0}}" />
        </DockPanel>

        <!-- Video -->
        <Border Grid.Row="1" Background="Black">
            <Image Stretch="Uniform" Source="{Binding FrameImage}" />
        </Border>
    </Grid>
</Window>
